<div class="overlay"></div>
<div class="content">
  <h1 class="headline title-dark">{{contact.contactUs}}</h1>
  <div class="form">
    <form id="contact-form">
      <div class="form-field">
        <label for="products">{{contact.interestedIn}}</label>
        <div class="products">
          <div>
            <label for="hiking">{{contact.hiking}}</label>
            <input type="checkbox" name="hiking">
          </div>
          <div>
            <label for="camping">{{contact.camping}}</label>
            <input type="checkbox" name="camping">
          </div>
          <div>
            <label for="camping">{{contact.custom}}</label>
            <input type="checkbox" name="custom">
          </div>
        </div>
      </div>
      <div class="form-field">
        <label for="name">{{contact.name}}</label>
        <input type="text" name="name">
      </div>
      <div class="form-field">
        <label for="email">{{contact.email}}</label>
        <input type="email" name="email">
      </div>
      <div class="trip-dates">
        <div class="form-field" id="departure-date">
          <label for="departure-date">{{contact.departure}}</label>
          <input type="text" name="departure-date" class="date-picker">
        </div>
        <div class="form-field" id="return-date">
          <label for="return-date">{{contact.return}}</label>
          <input type="text" name="return-date" class="date-picker">
        </div>
      </div>
      <div class="form-field">
        <label for="message">{{contact.message}}</label>
        <textarea name="message"></textarea>
      </div>
      <div class="submit">
        <input type="submit" value={{contact.submit}} class="button purple">
      </div>
    </form>
  </div>
</div>